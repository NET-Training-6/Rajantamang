@model Employee
@using WorkForceManagement.web.Enum;
@{
    string[] gender = Enum.GetNames<Gender>();
}

<div class="card border-2">
    <div class="card-body">
        <form class="row g-3" action="/employees/Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for=Id />
            <div class="col-md-6">
                <label asp-for=Name class="form-label"></label>
                <input asp-for=Name class="form-control">
            </div>

            <div class="col-md-6">
                <label asp-for=Contact class="form-label"></label>
                <input asp-for=Contact class="form-control">
            </div>

            <div class="col-md-6">
                <label asp-for=Gender class="form-label"></label>
                <div>
                    @foreach (string g in gender)
                    {
                        var check = Model.Gender.ToString() == g ? "Checked" : "";
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Gender" id="@g" value="@g" @check>
                            <label class="form-check-label" for="@g">@g</label>
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for=Address class="form-label"></label>
                <input asp-for=Address class="form-control">
            </div>

            <div class="col-md-6">
                <label asp-for=Dob class="form-label"></label>
                <input asp-for=Dob class="form-control">
            </div>

            <div class="col-md-6">
                <label asp-for=JoinDate class="form-label"></label>
                <input asp-for=JoinDate class="form-control">
            </div>

            <div class="col-md-6">
                <label asp-for=Department class="form-label"></label>
                <input asp-for=Department class="form-control">
            </div>

            <div class="col-md-6">
                <label asp-for=Designation class="form-label"></label>
                <input asp-for=Designation class="form-control">
            </div>

            <div class="col-md-8">
                <label asp-for="ProfileImage" class="form-label"></label>
                <input class="form-control" asp-for="ProfileImage">
               

            </div >
            <div class="col-md-4">
                 <img src="@Model.ProfileImagePath" height="60" width="45" class="mt-2" />
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary w-25 float-end">Update</button>
            </div>
        </form>
    </div>
</div>
